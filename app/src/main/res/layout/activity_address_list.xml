<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.activities.AddressListActivity"
    android:background="@color/black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_address_list_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/app_gradient_color_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbar_address_list_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/title_address_list"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/toolbar_title_text_size"
            android:paddingStart="@dimen/toolbar_title_paddingStart"
            tools:ignore="RtlCompat" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/address_list_add_address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbL_add_address"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/btn_textSize"
        android:padding="@dimen/btn_add_address_padding"
        android:layout_margin="@dimen/btn_add_address_margin"
        android:background="@drawable/item_color_border"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_address_list_activity"

         />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/address_list_address_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rv_address_list_marginTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/address_list_add_address_tv" />

    <TextView
        android:id="@+id/address_list_no_address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/no_address_found"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/no_data_found_textSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_list_address_rv"
        android:gravity="center_horizontal" />


</androidx.constraintlayout.widget.ConstraintLayout>